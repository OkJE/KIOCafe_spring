<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cart">

	<select id="cartList" parameterType="map" resultType="cart">
		select *
		from kiocafe_cart where did = #{id}
	</select>


	<delete id="cartDelete" parameterType="hashmap">
		DELETE FROM kiocafe_cart
		where did = #{userid}
		and dnum IN
		<foreach collection="didlist" item="item" index="index"
			separator="," open="(" close=")">
			#{item}
		</foreach>
	</delete>
	
	<insert id="cartInsert" parameterType="hashmap">
		INSERT FROM kiocafe_cart VALUES	
		
		<foreach collection="didlist" item="item" index="index"
			separator="," open="(" close=")">
			#{item}
		</foreach>
	</insert>

</mapper> 